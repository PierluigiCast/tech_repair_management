<odoo>
    <record id="view_repair_device_color_list" model="ir.ui.view">
        <field name="name">tech.repair.device.color.list</field>
        <field name="model">tech.repair.device.color</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_repair_device_color_form" model="ir.ui.view">
        <field name="name">tech.repair.device.color.form</field>
        <field name="model">tech.repair.device.color</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tech_repair_device_color" model="ir.actions.act_window">      
        <field name="name">Colori Dispositivi</field>
        <field name="res_model">tech.repair.device.color</field>
        <field name="view_mode">list,form</field>
         <field name="type">ir.actions.act_window</field>
    </record>

    
</odoo>