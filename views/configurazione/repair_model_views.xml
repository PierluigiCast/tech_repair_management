<!-- Interfaccia gestione modelli -->
<odoo>
    <record id="view_tech_repair_model_form" model="ir.ui.view">
        <field name="name">tech.repair.model.form</field>
        <field name="model">tech.repair.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="brand_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tech_repair_model_list" model="ir.ui.view">
        <field name="name">tech.repair.model.list</field>
        <field name="model">tech.repair.model</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="brand_id"/>
            </list>
        </field>
    </record>
  
    <record id="action_tech_repair_model" model="ir.actions.act_window">
        <field name="name">Modelli Dispositivi</field>
        <field name="res_model">tech.repair.model</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
