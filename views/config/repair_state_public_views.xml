<odoo>
    <record id="view_tech_repair_state_public_list" model="ir.ui.view">
        <field name="name">tech.repair.state.public.list</field>
        <field name="model">tech.repair.state.public</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="sequence"/>
            </list>
        </field>
    </record>

    <record id="view_tech_repair_state_public_form" model="ir.ui.view">
        <field name="name">tech.repair.state.public.form</field>
        <field name="model">tech.repair.state.public</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tech_repair_state_public" model="ir.actions.act_window">
        <field name="name">Stati Visibili al Cliente</field>
        <field name="res_model">tech.repair.state.public</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>