<!-- Interfaccia gestione categorie -->

<odoo>
    <record id="view_tech_repair_category_form" model="ir.ui.view">
        <field name="name">tech.repair.category.form</field>
        <field name="model">tech.repair.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tech_repair_category_list" model="ir.ui.view">
        <field name="name">tech.repair.category.list</field>
        <field name="model">tech.repair.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_tech_repair_category" model="ir.actions.act_window">
        <field name="name">Categorie Dispositivi</field>
        <field name="res_model">tech.repair.category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
